# Data Export & Analysis Configuration

# === Google Analytics ===
# Get credentials from Google Cloud Console
# https://console.cloud.google.com/
GA_PROPERTY_ID=your_ga4_property_id
GA_CREDENTIALS_PATH=./ga-credentials.json

# === Shopify ===
# Get from Shopify Admin > Apps > Develop apps
# https://admin.shopify.com/store/YOUR_STORE/settings/apps/development
SHOPIFY_SHOP_URL=your-shop.myshopify.com
SHOPIFY_ACCESS_TOKEN=shpat_xxxxxxxxxxxxx

# === Stripe ===
# Get from Stripe Dashboard > Developers > API keys
# https://dashboard.stripe.com/apikeys
STRIPE_API_KEY=sk_live_xxxxxxxxxxxxx

# === MySQL Database ===
DB_MYSQL_HOST=localhost
DB_MYSQL_PORT=3306
DB_MYSQL_USER=username
DB_MYSQL_PASSWORD=password
DB_MYSQL_DATABASE=database_name

# === PostgreSQL Database ===
DB_POSTGRES_HOST=localhost
DB_POSTGRES_PORT=5432
DB_POSTGRES_USER=username
DB_POSTGRES_PASSWORD=password
DB_POSTGRES_DATABASE=database_name

# === Export Settings ===
# Output directory for exports
EXPORT_DIR=./exports

# Default date range (days)
DEFAULT_DATE_RANGE=30

# Timezone
TIMEZONE=America/New_York

# === Performance Settings ===
# Batch size for processing
BATCH_SIZE=1000

# Enable streaming for large datasets
ENABLE_STREAMING=true

# Max concurrent exports
MAX_CONCURRENT=3

# === Rate Limiting ===
# Delay between API calls (milliseconds)
RATE_LIMIT_DELAY=500

# === Scheduling ===
# Enable cron scheduling
ENABLE_SCHEDULING=true

# Schedule timezone
SCHEDULE_TIMEZONE=America/New_York
